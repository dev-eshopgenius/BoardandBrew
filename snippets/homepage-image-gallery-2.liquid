{% if settings.g2_full_width %}<div class="gridlock-fluid"><div class="row">{% endif %}
<div class="row homepage-section no-fouc">      
{% for i in (7..12) %}  
<!-- Show image --> 	{% assign image='promo_image_' | append: i %}
<!-- Link -->  			{% assign image_grid_url='image_grid' | append: i | append: '_url' %}
<!-- Alt text -->  		{% assign image_grid_alt='image_grid' | append: i | append: '_alt' %}
<!-- Filename -->  		{% assign image_grid_img_url='image_grid' | append: i | append: '.jpg' %}
<!-- Title text -->  	{% assign image_grid_title='image_grid' | append: i | append: '_title' %}
<!-- Hidden text -->  	{% assign image_grid_hidden='image_grid' | append: i | append: '_hidden' %} 
<!-- Hidden text -->	{% assign image_size = 'image-width-' | append: i %}
{% if settings[image] %}
<div class="homepage-promo {{settings[image_size]}} mobile-3 {% if settings.g2_full_width and settings[image_size] == 'desktop-12' %} centered{% endif %}">
<a href="{{settings[image_grid_url]}}">
<img src="{{image_grid_img_url | asset_url}}" alt="{{settings[image_grid_title]}}">
<div class="caption"><h3>{{settings[image_grid_title]}}</h3>
<p>{{settings[image_grid_hidden]}}</p>
</div>
</a>
</div>
{% endif %}
{% endfor %}        
</div>
{% if settings.g2_full_width %}</div></div>{% endif %}
